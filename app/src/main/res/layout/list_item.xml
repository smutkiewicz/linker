<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="160dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/card_corner_radius">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/titleTv"
                android:text="@string/sample_title_of_a_link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="@android:style/TextAppearance.Material.Body2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/miniatureIv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>

        <ImageView
                android:id="@+id/miniatureIv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/default_miniature"
                android:background="@drawable/round_outline"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="8dp"/>

        <ImageButton
                android:id="@+id/favouriteIb"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_unstarred"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@+id/shareIb"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"/>

        <TextView
                android:id="@+id/domainTv"
                android:text="@string/sample_link"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/miniatureIv"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/titleTv" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="12sp"/>

        <ImageButton
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_share"
                android:id="@+id/shareIb"
                android:background="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toTopOf="@+id/divider" android:layout_marginBottom="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryTv"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textAlignment="viewStart"
                android:text="Category"
                android:textAllCaps="true"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/divider"/>
        <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/favouriteIb"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="26 Jun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>