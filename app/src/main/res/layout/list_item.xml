<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="96dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/card_corner_radius">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/titleTv"
                android:text="@string/sample_title_of_a_link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/miniatureIb"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/favouriteIb"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/domainTv" android:maxLines="3" android:textAllCaps="false" android:typeface="sans"/>

        <ImageView
                android:id="@+id/miniatureIb"
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:src="@drawable/default_miniature"
                android:background="@drawable/round_outline"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
        />

        <ImageButton
                android:id="@+id/favouriteIb"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_unstarred"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@+id/shareIb"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

        <TextView
                android:id="@+id/domainTv"
                android:text="@string/sample_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/miniatureIb"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toStartOf="@+id/favouriteIb"
                android:layout_marginEnd="8dp" android:textColor="@color/colorPrimary"/>

        <ImageButton
                android:layout_width="42dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_share"
                android:id="@+id/shareIb"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0.0"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/categoryTv"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/miniatureIb"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toStartOf="@+id/domainTv"
                android:layout_marginEnd="8dp"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textAlignment="center"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>